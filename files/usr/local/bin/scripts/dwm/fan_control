#!/bin/bash

source $XDG_CACHE_HOME/wal/colors.sh

notify-send -u low "Fan Control" "Getting NBFC status..."
statut=$(nbfc status 2>/dev/null | grep "Service enabled" | awk '{if ($4=="True") print "enabled"; else print "disabled"}')
prompt=$(echo -e "Start NBFC\nStop NBFC" | rofi -dmenu -i -p "NBFC $statut" -1 -lines 2 -hide-scrollbar -font "Whatever 18" -color-window "$color0,$color7,$color5" -color-normal "$color0,$color7,$color0,$color1,$color0")

[ "$prompt" == "Start NBFC" ] && nbfc start && notify-send -u low "Fan Control" "NBFC started."
[ "$prompt" == "Stop NBFC" ] && nbfc stop && notify-send -u low "Fan Control" "NBFC stopped."
