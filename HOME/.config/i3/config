# resize window (you can also use the mouse for that)
# Pressing down will grow the window’s height.
bindsym $mod+Ctrl+h resize shrink width 10 px or 1 ppt
bindsym $mod+Ctrl+j resize grow height 10 px or 1 ppt
bindsym $mod+Ctrl+k resize shrink height 10 px or 1 ppt
bindsym $mod+Ctrl+l resize grow width 10 px or 1 ppt

# same bindings, but for the arrow keys
bindsym $mod+Ctrl+Left resize shrink width 10 px or 1 ppt
bindsym $mod+Ctrl+Down resize grow height 10 px or 1 ppt
bindsym $mod+Ctrl+Up resize shrink height 10 px or 1 ppt
bindsym $mod+Ctrl+Right resize grow width 10 px or 1 ppt

bar {
  position top
  status_command i3blocks -c ~/.config/i3/i3blocks.conf
  colors {
    background $bg
    statusline $ubg
    separator $ib
    #                  border   background    text
    focused_workspace  $fg      $fg           $ubg
    inactive_workspace $bg      $bg           $fg
    urgent_workspace   $ubg     $ubg          $ufg
    }
  workspace_buttons yes
  tray_output none
  font pango:FontAwesome, Liberation Mono for Powerline 12
}

