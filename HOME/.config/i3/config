# Set colors from Xresources
set_from_resource $fg i3wm.color4 $active-color
set_from_resource $bg i3wm.color0 $bg-color
set_from_resource $ib i3wm.color2 $inactive-bg-color
set_from_resource $abg i3wm.color3 $active-bg-color
set_from_resource $afg i3wm.color0 $bg-color
set_from_resource $ubg i3wm.color7 $urgent-bg-color
set_from_resource $ufg i3wm.color0 $bg-color

# class                 border  backgr. text  indicator child_border
client.focused          $abg    $abg    $afg  $abg      $abg
client.focused_inactive $ib     $bg     $fg   $ib       $ib
client.unfocused        $ib     $bg     $fg   $ib       $ib
client.urgent           $ubg    $ubg    $ufg  $bg       $bg
client.placeholder      $bg     $bg     $fg   $bg       $bg
client.background       $bg

