set $mod Mod4

font pango:FontAwesome 13

floating_modifier $mod

# disable window titlebars
for_window [class="^.*"] border pixel 0
bindsym $mod+shift+b border pixel 0
bindsym $mod+b border pixel 1

# gaps
gaps inner 15
gaps outer 0

bindsym $mod+Ctrl+Shift+KP_Add exec i3-msg gaps outer all plus 5
bindsym $mod+Ctrl+Shift+KP_Subtract exec i3-msg gaps outer all minus 5

bindsym $mod+Ctrl+KP_Add exec i3-msg gaps inner all plus 5
bindsym $mod+Ctrl+KP_Subtract exec i3-msg gaps inner all minus 5

bindsym $mod+Shift+KP_Add exec i3-msg gaps outer current plus 5
bindsym $mod+Shift+KP_Subtract exec i3-msg gaps outer current minus 5

bindsym $mod+KP_Add exec i3-msg gaps inner current plus 5
bindsym $mod+KP_Subtract exec i3-msg gaps inner current minus 5

smart_gaps inverse_outer
